{
  "name": "slova",
  "version": "2.2.9",
  "description": "A placeholder tool for generating non-existing words",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "build": "tsup src/index.ts --format=esm,cjs --dts --minify",
    "build-fast": "tsup src/index.ts --format=esm,cjs --no-dts --minify",
    "dev": "pnpm build-fast --watch",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RaydanOMGr/slova.git"
  },
  "keywords": [
    "word",
    "placeholder",
    "slova",
    "web"
  ],
  "contributors": [
    {
      "name": "andreasmelone",
      "url": "https://github.com/RaydanOMGr"
    },
    {
      "name": "domin-mnd",
      "url": "https://domin.pro"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RaydanOMGr/slova/issues"
  },
  "homepage": "https://github.com/RaydanOMGr/slova#readme",
  "devDependencies": {
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4"
  }
}
